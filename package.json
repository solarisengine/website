{
  "name": "solaris-engine-backend",
  "version": "1.0.0",
  "description": "Backend for Solaris Engine",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "cd client && npm install --legacy-peer-deps && npm run build",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server.js",
    "client": "cd client && npm run dev",
    "ic": "cd client && npm install --legacy-peer-deps",
    "ia": "npm install && cd client && npm install --legacy-peer-deps"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "nodemailer": "^7.0.5"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "engines": {
    "node": "22.x"
  }
}
